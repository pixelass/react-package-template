{
  "name": "react-package-template",
  "version": "1.0.0",
  "description": "React package template",
  "license": "MIT",
  "author": {
    "name": "Gregor Adams",
    "url": "https://github.com/pixelass"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "build": "parcel build",
    "dev": "parcel watch",
    "eslint": "eslint '{**/*,*}.{js,ts,tsx}'",
    "eslint:fix": "yarn eslint --fix",
    "postinstall": "husky install",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "lint": "yarn tsc:noEmit && yarn eslint",
    "ncu": "yarn dlx npm-check-updates@16 -u --dep='prod,dev'",
    "ncu:minor": "yarn ncu -t minor",
    "ncu:patch": "yarn ncu -t patch",
    "prettier": "prettier '{**/*,*}.{ts,tsx}'",
    "release": "yarn dlx standard-version@9",
    "spj": "yarn dlx sort-package-json@1 package.json",
    "test": "yarn test:jest",
    "test:jest": "yarn jest",
    "toc": "yarn dlx markdown-toc@1 README.md -i",
    "tsc:noEmit": "tsc --noEmit",
    "unimported": "yarn dlx unimported@1"
  },
  "dependencies": {
    "tslib": "2.4.0",
    "type-fest": "3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@jest/globals": "^29.0.3",
    "@parcel/packager-ts": "2.7.0",
    "@parcel/transformer-typescript-types": "2.7.0",
    "@swc/core": "^1.3.3",
    "@swc/jest": "^0.2.22",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^16.11.45",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-config": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "standard-version": "^9.5.0",
    "typescript": "^4.8.3"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "packageManager": "yarn@3.2.0"
}
